---
import { studies } from "../../const/const.js";
import { language } from "../../const/language.js";
import { skills } from "../../const/skills.js";
---

<section class="section_studies">
  <div class="linear-grandient-1"></div>
  <div class="content_studies">
    <h3 class="title-studies" id="studies">Education</h3>
    <ul class="ul-studies">
      {
        studies.map(({ date, title, corporation }) => (
          <li class="li-studies">
            <span class="circle" />
            <div>
              <h3>{title}</h3>
              <p>{corporation}</p>
              <span>{date}</span>
            </div>
          </li>
        ))
      }
    </ul>
  </div>


   <div class="content_language">
    <h3 class="title-language" id="language">Languages</h3>
    <ul class="ul-language">
      {
        language.map(({ name,niveau}) => (
          <li class="li-language">
            <span class="circle" />
            <div>
              <h3>{name}</h3>
              <p>{niveau}</p>
              
            </div>
          </li>
        ))
      }
    </ul>
  </div>









  <div class="content_skills">
    <h3 class="title-skills" id="language">Skills</h3>
    <ul class="ul-skills">
      {
        skills.map(({skill}) => (
          <li class="li-skills">
            <span class="circle" />
            <div>
              
              <p>{skill}</p>
              
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</section>

